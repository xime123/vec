<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/eye_bg"
    tools:context="vec.com.vec.start.PermissionActivity">
    <TextView
        android:layout_marginTop="@dimen/gap_gift_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:text="Hi 满朝大海暖花开 我是你的超级 助理VEC"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        />
    <TextView
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了更好的为你提供服务，我需要获取到手机以下 权限"
        android:textColor="#ffd3e1ff"
        android:textSize="12dp"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_super_super_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/gap_small"
            android:button="@drawable/check_box_green"
            android:checked="true"/>
        <TextView
            android:layout_marginLeft="@dimen/gap_micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取到你手机相册的权限"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_marginLeft="@dimen/gap_medium"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/gap_small"
        android:button="@drawable/check_box_green"
        android:gravity="center"
        android:checked="true"/>
    <TextView
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取到你手机通讯录的权限"
        android:textColor="#ffffffff"
        android:textSize="12dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/gap_small"
            android:button="@drawable/check_box_green"
            android:checked="true"/>
        <TextView
            android:layout_marginLeft="@dimen/gap_micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取到你手机相机的权限"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/gap_small"
            android:button="@drawable/check_box_green"
            android:checked="true"/>
        <TextView
            android:layout_marginLeft="@dimen/gap_micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取到你手机root的权限"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_super_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/gap_small"
            android:button="@drawable/check_box_green"
            android:checked="false"/>
        <TextView
            android:layout_marginLeft="@dimen/gap_micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读相关条款和潜在风险《相关条款》"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_gift_list"
        android:textColor="@color/white"
        android:text="确认"
        android:textSize="16dp"
        android:gravity="center"
        android:onClick="permissionSure"
        android:background="@drawable/text_btn_bg_yellow"
        />
</LinearLayout>
